{
    "openapi": "3.0.0",
    "info": {
        "title": "Api Hospital",
        "description": "Aquesta API permet la comuncicació entre BDD i el front del projecte",
        "version": "1.0.0"
    },
    "servers": [
        {
            "_comentario1": "afegir url de la Api",
            "url": ""
        }
    ],
    "paths": {
        "/habitacions": {
            "get": {
                "summary": "Obte una llista de totes les habitacions del hospital",
                "responses": {
                    "200": {
                        "description": "Llista d'habitacions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"array",
                                    "items": {
                                        "$ref": "#/components/schemas/Habitacio"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/beds": {
            "get": {
                "summary": "Obté una llista de tots els llits",
                "responses": {
                    "200": {
                        "description": "Llista de llits",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Bed"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Crea un llit nou",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Bed"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Llit creat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Bed"
                                }
                            }
                        }
                    }
                }
            }
        },
        "beds/{bedId}": {
            "get": {
                "summary": "Obté un llit per ID",
                "parameters": [
                    {
                        "name": "bedId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalls del llit",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Bed"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Llit no trobat"
                    }
                }
            },
            "put": {
                "summary": "Actualitza un llit per ID",
                "parameters": [
                    {
                        "name": "bedId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Bed"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Llit actualitzat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Bed"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Llit no trobat"
                    }
                }    
            },
            "delete": {
                "summary": "Borra un llit per ID",
                "parameters": [
                    {
                        "name": "bedId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Llit eliminat"
                    },
                    "404": {
                        "description": "Llit no trobat"
                    }
                }
            }
        },
        "/patients": {
            "get": {
                "summary": "Obté una llista de tots els pacients",
                "responses": {
                    "200": {
                        "description": "Llista de pacients",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Patients"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Crea un pacient nou",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Patients"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Pacient creat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Patients"
                                }
                            }
                        }
                    }
                } 
            }
        },
        "/patients/{id}": {
            "get": {
                "summary": "Obté un pacient per ID",
                "parameters": [
                    {
                        "name": "patientId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalls del pacient",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Patients"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pacient no trobat"
                    }
                }
            },
            "patch": {
                "summary": "Actualitza un pacient per ID",
                "paramenters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "dni_nif": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "surname": {
                                        "type": "string"
                                    },
                                    "llitID": {
                                        "type": "integer"
                                    },
                                    "estat": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "user": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "dni_nif": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "carreg": {
                        "type": "string"
                    }
                }
            },
            "Bed": {
                "type": "object",
                "propieties": {
                    "id": {
                        "type": "string"
                    },
                    "habId": {
                        "type": "string"
                    },
                    "pacientId": {
                        "type": "string",
                        "nullable": true
                    }
                    
                }
            }
        }
    }
}
